{% set navPages = collections.pages | eleventyNavigation %}
<nav x-data="{ open: false }" class="bg-pine border-b shadow relative">
  <div class="px-8 md:px-16 lg:px-32 py-4">
    <div class="flex justify-between h-16">
        <div class="flex items-center">
          {# small logo hidden on md and above #}
          <a aria-label="Mobile Logo" href="/" class="block md:hidden logo text-5xl pr-3 mt-1" alt="Mobile Logo">
            <i class="fas fa-seedling"></i>
          </a>
          {# large logo hidden on small, block on md #}
          <div class="flex justify-center p-2">
            <div class="logo text-5xl pr-3 mt-2 text-dark"><a href="/"><i class="fas fa-seedling"></i></a></div>
            <div class="p-1">
              <a class="text-2xl" to="/">Container.Garden</a>
              <p class="block text-lg">My adventures in container gardening</p>
            </div>
          </div>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:items-center bg-leaf-green">
          {# 11ty Nav Plugin loop  #}
          {% for entry in navPages %}
            <a {% if page.url != entry.url %}href="{{ entry.url | url }}"{% endif %} alt="Link to {{ entry.title }}" class=" px-3 py-2 font-medium rounded-md items-center {% if page.url == entry.url %} bg-dark-green text-white {% else %} text-white hover:text-dark {% endif %} focus:outline-none focus:text-dark transition duration-150 ease-in-out">
              {{ entry.title }}
            </a>
          {% endfor %}
        </div>

      {# Right side of Navbar  #}

      {# MOBILE MENU  #}
      <div class="flex items-center mr-2 sm:hidden bg-leaf-green">
        {# Mobile menu button #}
        <button @click="open = !open" class="inline-flex items-center justify-center p-2 transition duration-150 ease-in-out rounded-md text-white hover:text-dark focus:text-dark" x-bind:aria-label="open ? 'Close main menu' : 'Main menu'" aria-label="Main menu" x-bind:aria-expanded="open">
          {# Icon when menu is closed.  #}
          <svg x-state:on="Menu open" x-state:off="Menu closed" :class="{ 'hidden': open, 'block': !open }" class="block w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          {# Icon when menu is open.  #}
          <svg x-state:on="Menu open" x-state:off="Menu closed" :class="{ 'hidden': !open, 'block': open }" class="hidden w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div x-description="Mobile menu, toggle classes based on menu state." x-state:on="Menu open" x-state:off="Menu closed" :class="{ 'block': open, 'hidden': !open }" class="hidden sm:hidden">
    <div class="pt-2 pb-3">
      {# 11ty Nav Plugin loop  #}
      {% for entry in navPages %}
        <a {% if page.url != entry.url %}href="{{ entry.url | url }}"{% endif %} alt="Link to {{ entry.title }}" class="block pl-4 pr-4 py-2 {% if page.url == entry.url %} bg-dark-green text-white {% else %} text-white hover:text-dark {% endif %} text-base font-medium text-white focus:outline-none focus:text-dark focus:bg-dark-green transition duration-150 ease-in-out">
          {{ entry.title }}
        </a>
      {% endfor %}

    </div>

  </div>
</nav>